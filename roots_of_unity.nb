plotAll[t_, color_] := Module[{p1, l1},
   p1 = Graphics[{color, PointSize[Large], pt[t]}, Axes -> True, 
     PlotRange -> {{-1, 1}, {-1, 1}}];
   l1 =  Graphics[line[t], Axes -> True, 
     PlotRange -> {{-1, 1}, {-1, 1}}];
   
   Show[l1, Graphics[Circle[{0, 0}]], redDots, p1] 
   ];


r1 = Table[
   plotAll[t, Darker[Green]], {t, 0, roots[[2]], .1*roots[[2]] } ];
