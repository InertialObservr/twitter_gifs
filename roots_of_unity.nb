  Graphics[{Darker[Green], PointSize[Large], dots[[2]]}, Axes -> True,
    PlotRange -> {{-1, 1}, {-1, 1}}] ;
blueDot = 
  Graphics[{Blue, PointSize[Large], dots[[3]]}, Axes -> True, 
   PlotRange -> {{-1, 1}, {-1, 1}}] ;
redDots = {redDot, greenDot, blueDot};


p1 = Graphics[{Blue, PointSize[Large], pt[\[Pi]/3]}, Axes -> True, 
